{% capture assign = "applePayAvailabilityCheck" %}
{% if false %}<script>{% endif %}
   document.addEventListener("DOMContentLoaded", function() {
        if (!window.ApplePaySession || !ApplePaySession.canMakePayments()) {
            const paymentElement = document.querySelector('[name="paymentid"][value="{{ sPaymentID }}"]');
            if (paymentElement) {
                const closestWell = paymentElement.closest('.well');
                if (closestWell) {
                    closestWell.remove();
                }
            }
        }
    });
{% if false %}</script>{% endif %}
{% endcapture %}
{{ script({ add: applePayAvailabilityCheck, dynamic: __oxid_include_dynamic }) }}
